<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_white_background"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/tools">

    <include layout="@layout/impatient_action_bar" />

    <TableRow
        android:id="@+id/tableRowEmailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/right_dimension_20"
        android:layout_marginTop="@dimen/top_dimension"
        app:ignore="RtlHardcoded" >

        <TextView
            android:id="@+id/textViewEmailHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_email_header" />
    </TableRow>

    <ImageView
        android:id="@+id/imageViewEmailVerticalLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/void_decription"
        android:src="@drawable/ic_vertical_line" />
    
</LinearLayout>
