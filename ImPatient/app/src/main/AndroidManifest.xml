            android:name=".DoctorImpatientActivity"
            android:label="@string/doctor_layout_title" />
        <activity
            android:name=".EmailImpatientActivity"
            android:label="@string/email_layout_title" />
        <activity
            android:name=".TreatmentImpatientActivity"
            android:label="@string/treatment_layout_title" />
