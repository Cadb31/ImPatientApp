<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_white_background"
    android:orientation="vertical" >

    <include layout="@layout/impatient_action_bar" />

    
    <TableRow
        android:id="@+id/tableRowProfileHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/right_dimension_20"
        android:layout_marginTop="@dimen/top_dimension"
        tools:ignore="RtlHardcoded" >

        <TextView
            android:id="@+id/textViewProfileHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_header" />
    </TableRow>

    <ImageView
        android:id="@+id/imageViewProfileVerticalLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/void_decription"
        android:src="@drawable/ic_vertical_line" />
    
    <TableLayout
        android:id="@+id/tableLayoutProfile"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/top_dimension" >

        <TableRow
            android:id="@+id/tableRowIdNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewProfileIdNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_id_number" />

            <EditText
                android:id="@+id/editTextProfileIdNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                tools:ignore="TextFields" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRowFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewProfileFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_first_name" />

            <EditText
                android:id="@+id/editTextProfileFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="text" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewProfileLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_last_name" />

            <EditText
                android:id="@+id/editTextProfileLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="text" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRowDateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewProfileDateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_date_of_birth" />

            <EditText
                android:id="@+id/editTextProfileDateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="date" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRowEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_email" />

            <EditText
                android:id="@+id/editTextProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="textEmailAddress" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRowPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewProfilePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_phone" />

            <EditText
                android:id="@+id/editTextProfilePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="phone" />

        </TableRow>
    </TableLayout>

    <TableRow
        android:id="@+id/tableRowProfileButtons"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/top_dimension" >

        <Button
            android:id="@+id/buttonProfileCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/button_cancel"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonProfileEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_edit"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonProfileSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/button_save"
            tools:ignore="ButtonStyle" />

    </TableRow>

</LinearLayout>